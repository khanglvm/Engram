{
    "hooks": {
        "SessionStart": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/session_start.sh"
            }
        ],
        "UserPromptSubmit": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/user_prompt.sh"
            }
        ],
        "PreToolUse": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/pre_tool_use.sh"
            }
        ],
        "PostToolUse": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/post_tool_use.sh",
                "matcher": [
                    "Write",
                    "Edit",
                    "Create",
                    "Delete",
                    "write_to_file",
                    "replace_file_content",
                    "multi_replace_file_content"
                ]
            }
        ],
        "SubagentStart": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/subagent_start.sh"
            }
        ],
        "SubagentStop": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/subagent_stop.sh"
            }
        ],
        "PreCompact": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/pre_compact.sh"
            }
        ],
        "SessionEnd": [
            {
                "type": "command",
                "command": "$HOME/.engram/hooks/session_end.sh"
            }
        ]
    }
}